<%= form_for(@match) do |f| %>
  <% if @match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :home_team %><br>
    <%= collection_select(:match, :home_team_id, Team.ordered, :id, :name) %>
  </div>
  
  <div class="field">
    <%= f.label :away_team %><br>
    <%= collection_select(:match, :away_team_id, Team.ordered, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :home_goals %><br>
    <%= f.number_field :home_goals %>
  </div>
  <div class="field">
    <%= f.label :away_goals %><br>
    <%= f.number_field :away_goals %>
  </div>
  <div class="field">
    <%= f.label :play_time %><br>
    <%= f.datetime_select :play_time %>
  </div>
  <div class="field">
    <%= f.label :group %><br>
    <%= collection_select(:match, :group_id, Group.all, :id, :name, {include_blank: true}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
