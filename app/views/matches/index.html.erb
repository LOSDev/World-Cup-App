<h1>Listing matches</h1>

<table class="table">
  <thead>
    <tr>
      <th>Home team</th>
      <th>Away team</th>
      <th>Home goals</th>
      <th>Away goals</th>
      <th>Play time</th>
      <th>Group</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.home_team.name %></td>
        <td><%= match.away_team.name %></td>
        <td><%= match.home_goals %></td>
        <td><%= match.away_goals %></td>
        <td><%= match.play_time %></td>
        <td><%= match.group.name if match.group %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
