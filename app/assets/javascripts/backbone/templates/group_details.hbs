<h2>Group {{name}}</h2>
<div class="panel panel-default">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Team</th>
      <th></th>
      <th>W</th>
      <th>D</th>
      <th>L</th>
      <th>GF</th>
      <th>GA</th>
      <th>P</th>
    </tr>
  </thead>
  <tbody>
    {{#each teams}}
      <tr>
        <td>{{name}}</td>
        <td>{{{flag}}}</td>
        <td>{{win}}</td>
        <td>{{draw}}</td>
        <td>{{loss}}</td>
        <td>{{gf}}</td>
        <td>{{ga}}</td>
        <td>{{points}}</td>
      
      </tr>
    {{/each}}
  </tbody>
</table>
</div>

<hr>
<h3>Group {{name}} Matches</h3>

