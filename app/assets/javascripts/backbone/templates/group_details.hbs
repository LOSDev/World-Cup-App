<h2>Group {{name}}</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Team</th>
      <th></th>
      <th>W</th>
      <th>D</th>
      <th>L</th>
      <th>GF</th>
      <th>GA</th>
      <th>P</th>
    </tr>
  </thead>
  <tbody>
    {{#each teams}}
      <tr>
        <td>{{name}}</td>
        <td>{{{flag}}}</td>
        <td>{{win}}</td>
        <td>{{draw}}</td>
        <td>{{loss}}</td>
        <td>{{gf}}</td>
        <td>{{ga}}</td>
        <td>{{points}}</td>
      
      </tr>
    {{/each}}
  </tbody>
</table>

<hr>
<h3>Group {{name}} Matches</h3>

{{#each matches}}

  <div class="well well-sm">
    
  
  <table class="table">
    
    <thead>
      <tr>
        <th colspan="2"><span class="badge pull-left">{{ play_time }}</span></th>      
        <th colspan="1" rowspan="" headers="" scope=""></th>      
        <th colspan="2"><span class="badge pull-right"></span></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td width="10%" align="right"><span>{{{ home_flag }}}</span></td>

        <td width="25%" align="right"><span>{{ home_team.name }}</span></td>
        <td width="10%" align="center"><span>{{ home_goals }}</span></td>
        <td width="10%" align="center"><span>-</span></td>
        <td width="10%" align="center"><span>{{ away_goals}}</span></td>
        <td width="25%" align="left"><span>{{ away_team.name }}</span></td>
        <td width="10%" align="right"><span>{{{ away_flag }}}</span></td>

      </tr>
    </tbody>
  </table>
  </div>
{{/each}}